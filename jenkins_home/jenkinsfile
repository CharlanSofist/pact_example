pipeline {
    agent any

    stages {
        stage('Test Consumer') {
            steps {
                sh 'pytest consumer/test_consumer.py'
            }
        }
        stage('Test Provider') {
            steps {
                sh 'pytest provider/test_provider.py'
            }
        }
        stage('Can I Deploy?') {
            steps {
                sh 'pact-broker can-i-deploy --pacticipant ConsumerService --version 1.0.0'
            }
        }
    }
}
